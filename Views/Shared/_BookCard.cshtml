@model Bookstore.Entities.Book
<div class="col">
    <div class="card h-100 shadow-sm">
        <img src="@Model.CoverImageUrl" class="card-img-top" alt="@Model.Title" style="object-fit:cover;height:230px;">
        <div class="card-body d-flex flex-column">
            <h6 class="card-title mb-1">@Model.Title</h6>
            <small class="text-muted">@Model.Author</small>
            <p class="mt-2 mb-2 small flex-grow-1">
                @(Model.Description?.Length > 90 ? Model.Description.Substring(0, 90) + "..." : Model.Description)
            </p>
            <div class="d-flex justify-content-between align-items-center">
                <span class="fw-semibold">@Model.Price.ToString("C")</span>
                <div class="btn-group btn-group-sm">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">View</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>