@model Bookstore.Entities.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">My Profile</h4>
                    <div>
                        <a asp-action="EditProfile" class="btn btn-light btn-sm">Edit Profile</a>
                        <a asp-action="ChangePassword" class="btn btn-warning btn-sm">Change Password</a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Full Name</div>
                        <div class="col-sm-9">@Model.FirstName @Model.LastName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Email</div>
                        <div class="col-sm-9">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Phone</div>
                        <div class="col-sm-9">@Model.PhoneNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Address</div>
                        <div class="col-sm-9">@(string.IsNullOrEmpty(Model.Address) ? "Not provided" : Model.Address)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Member Since</div>
                        <div class="col-sm-9">@Model.JoiningDate.ToShortDateString()</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
