@model List<Bookstore.Entities.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2>Shopping Cart</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-controller="Home" asp-action="Index">Browse Books</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Book</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.Book.CoverImageUrl))
                                            {
                                                <img src="@item.Book.CoverImageUrl" alt="@item.Book.Title" class="me-2" style="width: 40px; height: 60px; object-fit: cover;">
                                            }
                                            <span class="fw-bold">@item.Book.Title</span>
                                        </div>
                                    </td>
                                    <td>@item.Book.Price.ToString("C")</td>
                                    <td>
                                        <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                            <input type="hidden" name="bookId" value="@item.Book.Id" />
                                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm me-2" style="width: 70px;" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                                        </form>
                                    </td>
                                    <td>@item.Total.ToString("C")</td>
                                    <td>
                                        <a asp-action="RemoveFromCart" asp-route-bookId="@item.Book.Id" class="btn btn-sm btn-outline-danger">Remove</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold">Grand Total:</td>
                                <td class="fw-bold">@Model.Sum(i => i.Total).ToString("C")</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="ClearCart" class="btn btn-outline-danger">Clear Cart</a>
            <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
        </div>
    }
</div>
