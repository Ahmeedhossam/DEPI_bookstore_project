@model Bookstore.Entities.Book

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
            {
                <img src="@Model.CoverImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Title">
            }
            else
            {
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded shadow-sm" style="height: 400px;">
                    <span>No Image Available</span>
                </div>
            }
        </div>
        <div class="col-md-8">
            <h1 class="display-4">@Model.Title</h1>
            <h4 class="text-muted mb-4">by @Model.Author</h4>
            
            <p class="lead">@Model.Description</p>
            
            <hr class="my-4">
            
            <div class="d-flex align-items-center mb-4">
                <h3 class="text-primary me-4">@Model.Price.ToString("C")</h3>
                <span class="badge bg-info text-dark">@Model.CopiesAvailable copies available</span>
            </div>

            <div class="d-flex gap-2">
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-bookId="@Model.Id" class="btn btn-primary btn-lg">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>