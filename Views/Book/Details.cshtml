@model Bookstore.Entities.Book
@{
    ViewData["Title"] = "Book Details";
}
<h3>@Model.Title</h3>
<div class="row">
    <div class="col-md-4">
        <img src="@Model.CoverImageUrl" alt="@Model.Title" class="img-fluid rounded border" />
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.Author</dd>
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
            <dt class="col-sm-3">Published</dt>
            <dd class="col-sm-9">@Model.PublishedDate.ToShortDateString()</dd>
            <dt class="col-sm-3">Available</dt>
            <dd class="col-sm-9">@Model.CopiesAvailable</dd>
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>